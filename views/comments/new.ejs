<% include ../partials/header %>
<div class="container">
     <div class="row">
        <h1 style="text-align: center;">Add a new Comment for <%= hotel.name %></h1>
        <div style="width: 30%; margin: 30px auto;">
            <form action = "/hotels/<%= hotel._id %>/comments" method = "POST">
                <div class="form-group">
                    <input class="form-control" type = "text" name = "comment[text]" placeholder = "Comment"></input>
                </div>
                <div class="form-group">
                    <input class="btn btn-lg btn-primary btn-block" type = "submit"></input>
                </div>
            </form>
            <a href = "/hotels/<%= hotel._id %>">Go Back..</a>
        </div>   
    </div>
</div>
<% include ../partials/footer %>