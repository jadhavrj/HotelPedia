<% include ../partials/header %>
<div class="row">
    <h1 style="text-align: center;">Add a new Hotel</h1>
    <div style="width: 30%; margin: 30px auto;">
        <form action = "/hotels" method = "POST">
            <div class="form-group">
                <input class="form-control" type = "text" name = "name" placeholder = "Hotel Name" required></input>
            </div>
            <div class="form-group">
                <input class="form-control" type = "text" name = "image" placeholder = "Image URL" required></input>
            </div>
            <div class="form-group">
                <input class="form-control" type = "number" name = "price" placeholder = "Price/night" min="0" step="0.01" required></input>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="location" placeholder="Location" required>
            </div>
            <div class="form-group">
                <input class="form-control" type = "text" name = "description" placeholder = "Description" required></input>
            </div>
            <div class="form-group">
                <input class="btn btn-lg btn-primary btn-block" type = "submit"></input>
            </div>
        </form>
        <a href = "/hotels">Go Back..</a>
    </div>   
</div>
<% include ../partials/footer %>