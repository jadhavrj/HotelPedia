<% include ../partials/header %>
<div class="row">
    <h1 style="text-align: center;">Edit <%= hotel.name %></h1>
    <div style="width: 30%; margin: 30px auto;">
        <form action = "/hotels/<%= hotel._id %>?_method=PUT" method = "POST">
            <div class="form-group">
                <input class="form-control" type = "text" name = "name" value="<%= hotel.name %>" required></input>
            </div>
            <div class="form-group">
                <input class="form-control" type = "text" name = "image" value="<%= hotel.image %>" required></input>
            </div>
            <div class="form-group">
                <input class="form-control" type = "number" name = "price" value="<%= hotel.price %>" min="0" step="0.01" reuired></input>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="location" value="<%= hotel.location %>" required>
            </div>
            <div class="form-group">
                <input class="form-control" type = "text" name = "description" value="<%= hotel.description %>" required></input>
            </div>
            <div class="form-group">
                <input class="btn btn-lg btn-primary btn-block" type = "submit"></input>
            </div>
        </form>
        <a href = "/hotels">Go Back..</a>
    </div>   
</div>
<% include ../partials/footer %>