<% include ../partials/header %>
<div class="container">
     <div class="row">
        <h1 style="text-align: center;">Edit <%= hotel.name %></h1>
        <div style="width: 30%; margin: 30px auto;">
            <form action = "/hotels/<%= hotel._id %>?_method=PUT" method = "POST">
                <div class="form-group">
                    <input class="form-control" type = "text" name = "hotel[name]" value="<%= hotel.name %>"></input>
                </div>
                <div class="form-group">
                    <input class="form-control" type = "text" name = "hotel[image]" value="<%= hotel.image %>"></input>
                </div>
                <div class="form-group">
                    <input class="form-control" type = "number" name = "hotel[price]" value="<%= hotel.price %>" min="0" step="0.01"></input>
                </div>
                <div class="form-group">
                    <input class="form-control" type = "text" name = "hotel[description]" value="<%= hotel.description %>"></input>
                </div>
                <div class="form-group">
                    <input class="btn btn-lg btn-primary btn-block" type = "submit"></input>
                </div>
            </form>
            <a href = "/hotels">Go Back..</a>
        </div>   
    </div>
</div>
<% include ../partials/footer %>